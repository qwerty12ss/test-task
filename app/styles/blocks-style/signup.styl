body
    padding auto 
    padding-top 60px 
    background-color #F2F2F2

.signup
    margin auto
    max-width 665px;
    min-height: 481px
    background BackgroundColorPage
    display grid
    grid-template-columns 20.6% 79.4%
    grid-template-rows 1fr

@media (max-width: 600px) 
        .signup
            display flex
            flex-direction column
            grid-template-columns none
            grid-template-rows none

@media (max-width: 480px) 
    .signup
            background BackgroundColorPage

.signup__page-header-wrapper
    background BackgroundColorHeaderSignup
    position relative
    vertical-align bottom
    text-align right 
    

.signup__page-header
    fontfamily("ptsans", normal, normal, 49px, textColorPageHeader)
    margin 0
    padding: 0
    transform rotate(180deg)
    width 60px
    height 187px
    writing-mode tb-rl
    position absolute
    bottom 0
    right 0px
    letter-spacing 0.5px

@media (max-width: 600px) 
        .signup__page-header
            transform none
            position relative
            writing-mode horizontal-tb
            width 180px
            height 63px
            padding-top 0

.signup__form-wrapper
    background #ffffff url('../../bg@1x.png') no-repeat right bottom
    background-size 307px 355px
    box-sizing border-box
    padding: 38.5px 21px 32px

@media (min-resolution: 1.5dppx),
    (min-resolution: 144dpi)
        .signup__page-header
            background #ffffff url('../../bg@2x.png') no-repeat right bottom

@media (max-width: 320px) 
    .signup__form-wrapper
        background #ffffff

.signup__annotation-header 
    fontfamily("worksans", normal, 700, 22px, textColorMain)
    line-height 26px
    margin 0
    letter-spacing 0px

.signup__annotation-text
    fontfamily("worksans", normal, 200, 14px, textColorMain)
    line-height 16px
    margin-bottom 20px
    letter-spacing -0.38px

@media (max-width: 320px) 
    .signup__annotation-header 
        width 276px
    
    .signup__annotation-text
        width 276px

.signup__form   
    height 100%

.signup__form-field-list 
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    padding 0
    margin 0
    list-style none
    align-items flex-start
    align-content flex-start
    max-width 480px

@media (max-width: 480px) 
    .signup__form-field-list
        flex-direction column

.signup__form-field-list li 
    min-width 210px
    width 48% 
    display flex
    flex-direction column
    margin-bottom: 16px;

@media (max-width: 320px) 
    .signup__form-field-list li 
        width 276px

.signup__input-label
    fontfamily("worksans", normal, 300, 12px, textColorSecond)
    line-height 14px
    margin-bottom 5px
    cursor pointer

.signup__input-text
    fontfamily("worksans", normal, normal, 14px, textColorMain)
    line-height 16px
    height 23px;
    border none
    border-bottom 1px solid borderColor
    padding 0 0 6.33px 0
    position relative
    background-color transparent

.signup__input-text:hover
    border-bottom 1px solid borderColorHover
    transition-duration: .1s;

.signup__input-text:focus
    border-bottom 1px solid borderColorHover
    transition-duration: .1s;

input.signup__input-text:valid
    transition-duration: .0s;
    background url('../../checkmark.svg') no-repeat right top

input.signup__input-text::-ms-clear {
   display: none;
}
    

.signup__select
    fontfamily("worksans", normal, normal, 14px, textColorMain)
    height 23px;
    border none
    border-bottom 1px solid borderColor
    padding 0 0 6.33px 0
    appearance: none;
    position relative
    background url('../../arrow.svg') no-repeat right 7px
    cursor pointer
    transition-duration: .1s;

.signup__select:hover
    border-bottom 1px solid borderColorHover

.signup__select:focus
    border-bottom 1px solid borderColorHover

.signup__select::after
    content ""
    display block
    position absolute
    top 2.3px
    left 0
    width 12px
    height 12px
    border 0.7px solid #5a61ed
    border-radius 50%
    box-sizing border-box

li.signup__fieldset 
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between

li.signup__fieldset.signup__fieldset--gender
    justify-content flex-start


.signup__legend
    fontfamily("worksans", normal, 300, 12px, textColorSecond)
    margin-bottom 7.5px
    width 100%

.signup__select--birth-day
    width 24%
    margin 0

.signup__select--birth-month
    width 39%

.signup__select--birth-year
    width 28%

.signup__gender-label
    fontfamily("worksans", normal, normal, 14px, textColorMain)
    box-sizing border-box
    width 69px
    position relative
    cursor pointer
    margin-right: 18px
    padding-left 19px

.signup__radio-gender 
    position absolute
    opacity 0

.signup__radio-gender  + .signup__gender-label::before
    content ""
    display block
    position absolute
    top 2.3px
    left 0
    width 12px
    height 12px
    border 0.7px solid #5a61ed
    border-radius 50%
    box-sizing border-box

.signup__radio-gender  + .signup__gender-label::after
    content ""
    display block
    position absolute
    top 5.3px
    left 3px
    width 6px
    height 6px
    border-radius 50%
    background-color #5a61ed
    opacity 0

.signup__radio-gender:checked  + .signup__gender-label::after
    opacity 1

.signup__form-bottom-wrapper
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    align-items center
    align-self flex-end
    margin-top 83px

@media (max-width: 480px) 
    .signup__form-bottom-wrapper
        margin-top 0
        align-items  flex-start
        flex-direction column

@media (max-width: 600px) 
    .signup__form-bottom-wrapper
        margin-top 30px

.signup__have-account
    fontfamily("worksans", normal, 300, 13px, #000000)
    letter-spacing -0.18px
    padding-bottom 5px

@media (max-width: 480px) 
    .signup__have-account
        margin-bottom 20px

.signup__have-account a
    fontfamily("worksans", normal, 400, 13px, textColorLink)
    transition-duration .1s

.signup__have-account a:hover
    color linkColorHover 
    opacity 0.75

.signup__have-account a:active
    color linkColorHover 
    opacity 0.6

.signup__form-submit-btn
    width 154px
    height 32px
    background-color btnColor
    border none
    fontfamily("ptsans", normal, normal, 14px, textColorLink)
    line-height 18px
    color textColorBtn
    transition-duration .2s

.signup__form-submit-btn:hover 
    background-color btnColorHover

.signup__form-submit-btn:active
    background-color btnColorActive